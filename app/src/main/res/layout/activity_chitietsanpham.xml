<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar

        app:title="Chi tiết sản phẩm"
        android:id="@+id/tb_chitietsp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#14ABF5" >
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgchitietsp"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:textSize="24sp"
                android:id="@+id/txttenchitietsp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="Tên sản phẩm"
                android:textStyle="bold" />

            <TextView
                android:textSize="22sp"
                android:id="@+id/txtgiachitietsp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="Giá giản phẩm" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:background="@drawable/spinner"
                android:gravity="center"
                android:layout_marginBottom="3dp"
                android:padding="1dp" />
            <Button
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="@drawable/bg_button"
                android:id="@+id/btnthemgiohang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:text="Thêm vào giỏ hàng" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="#fff"
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Chi tiết sản phẩm"
            android:textColor="#1231F0"
            android:textSize="32sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#000"
                android:textSize="20sp"
                android:id="@+id/txtchitietttsp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>
    </LinearLayout>
</LinearLayout>